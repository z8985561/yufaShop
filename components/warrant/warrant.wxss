/* components/warrant.wxss */
.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10000;
  font-size: 30rpx;
}
.mask .tips{
  position: absolute;
  top: 50%;
  left: 30rpx;
  right: 30rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transform: translateY(-50%);
  background-color: #fff;
  text-align: center;
  border-radius: 10rpx;
  overflow: hidden;
}
.mask .tips .title{
  font-size: 16px;
}
.mask .tips .content{
  font-size: 14px;
}
.mask .tips .btn{
  display: flex;
}
.mask .tips .btn button{
  flex: 1;
  border-radius: 0;
}
.mask .tips .btn button::after{
  border-radius: 0;
  border: none;
}