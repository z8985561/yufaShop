	.mod_footer_lk navigator {height: 12px; color: rgb(153, 153, 153); line-height: 12px; overflow: hidden; padding-right: 8px; margin-right: 8px; border-right-color: rgb(215, 215, 215); border-right-width: 1px;
		border-right-style: solid;}
